<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="persistence-unit-shares">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>vitaly.mosin.entity.Share</class>
        <properties>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.connection.url" value="jdbc:h2:file:./target/classes/dev/db-migrations/shares"/>
            <property name="hibernate.connection,user" value="sa"/>
        </properties>
    </persistence-unit>
    <persistence-unit name="persistence-unit-changes">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>vitaly.mosin.entity.Share</class>
        <properties>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.connection.url" value="jdbc:h2:file:./target/classes/dev/db-migrations/changes"/>
            <property name="hibernate.connection,user" value="sa"/>
        </properties>
    </persistence-unit>


</persistence>