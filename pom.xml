                    <!--<promptOnNonLocalDatabase>false</promptOnNonLocalDatabase>-->
                <!--</configuration>-->
                <executions>
                    <execution>
                        <id>db-shares-create</id>
                        <phase>process-resources</phase>
                        <configuration>
                            <changeLogFile>dev/db-migrations/changelog_1.0/2020-09-04-02-create-table-shares.xml</changeLogFile>
                            <driver>org.h2.Driver</driver>
                            <url>jdbc:h2:file:${project.build.outputDirectory}/dev/shares</url>
                            <username>sa</username>
                            <password/>
                        </configuration>
                        <goals>
                            <goal>update</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>db-changes-create</id>
                        <phase>process-resources</phase>
                        <configuration>
                            <changeLogFile>dev/db-migrations/changelog_1.0/2020-09-04-01-create-table-changes.xml</changeLogFile>
                            <driver>org.h2.Driver</driver>
                            <url>jdbc:h2:file:${project.build.outputDirectory}/dev/changes</url>
                            <!--<url>jdbc:h2:file:dev/shares</url>-->
                            <username>sa</username>
                            <password/>
                        </configuration>
                        <goals>
                            <goal>update</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.liquibase</groupId>
